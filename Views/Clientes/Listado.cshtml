           <td>@cliente.Direccion</td>
           <td>@cliente.Telefono</td>
           <td>
                <a class="btn btn-primary" asp-area="" asp-controller="Clientes" asp-action="Editar" asp-route-id="@cliente.IdCliente">Editar</a>
                <a class="btn btn-primary" asp-area="" asp-controller="Clientes" asp-action="Borrar" asp-route-id="@cliente.IdCliente">Borrar</a>
           </td>
      </tr>
     }
  </tbody>
    
</table>


